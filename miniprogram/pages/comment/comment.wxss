.movie-bg{
  height:400rpx;
  filter:blur(40rpx);
  opacity: .4;
}
.movie-mask{
  position: absolute;
  width:100%;
  height:400rpx;
  background-color:#333;
  top:0;
  left:0;
  z-index: -1;
}
.movie-info{
  position: absolute;
  width:100%;
  height:400rpx;
  top:0;
  left:0;
  display: flex;
  color:white;
}
.movie-img{
  height:100%;
  width:300rpx;
}
.movie-about{
  padding:20rpx;
  font-size:34rpx;
  line-height:1.5;
}
.movie-desc{
  font-size: 28rpx;
  padding:20rpx;
}
.movie-operate{
  padding:20rpx;
}
.comment-img{
  width:200rpx;
  height:200rpx;
  margin-right:20rpx;
  margin:40rpx auto;
}